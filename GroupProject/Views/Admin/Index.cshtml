@model IEnumerable<Employee>
<div class="selection-pane">
    <div class="selection-search full text-center blue-back white">
        <input id="EmployeeSearch" class="blue-back white" placeholder="Employee Name" oninput="filterEmployees(this.value)" />
    </div>
    @foreach (Employee e in Model)
    {
        <div class="selection-item full" onclick="loadEmployeePreview(@e.Id, this)">@e.FirstName @e.LastName</div>
    }
</div>
<div class="model-display" id="AdminContainer">
    <div class="content-container">
        <div class="model-buttons-right">
            <a class="btn blue-back white" role="button" asp-controller="admin" asp-action="AddEmployee">Add Employee</a>
            <a class="btn blue-back white" role="button" asp-controller="admin" asp-action="AddJobCode">Add Job Title</a>
            <a class="btn blue-back white" role="button" asp-controller="admin" asp-action="EditJobCode">Edit Job Title</a>
        </div>
    </div>
</div>