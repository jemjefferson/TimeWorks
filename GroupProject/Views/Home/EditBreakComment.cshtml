@model Break
@{
    Layout = null;
    Employee employee = ViewBag.Employee;
}
<div class="obscure" onclick="removePopup(event, this)">
    <div class="prompt" id="EditBreakComment">
        <div class="prompt-body-comment">
            <div class="prompt-header">
                <h2>Break Comment</h2>
            </div>
            <div class="prompt-input">
            <label>Comment:</label>
            <textarea name="Comment" id="CommentArea" maxlength="250">@Model.Comment</textarea>
            </div>
            <div class="prompt-buttons">
                <button class="gray-back" type="button" onclick="document.getElementById('EditBreakComment').parentNode.remove()">Cancel</button>
            <button class="green-back white" type="button" onclick="updateBreakComment(@Model.Id)">Save Comment</button>
            </div>
        </div>
    </div>
</div>